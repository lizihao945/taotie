<h1>Listing cookbooks</h1>

<table>
  <tr>
    <th>User</th>
    <th>Difficulty level</th>
    <th>Time level</th>
    <th>Description</th>
    <th>Tips</th>
    <th>Materials</th>
    <th>存在于以下菜单中</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cookbooks.each do |cookbook| %>
  <tr>
    <td><%= cookbook.user.name %></td>
    <td><%= cookbook.difficulty_level %></td>
    <td><%= cookbook.time_level %></td>
    <td><%= cookbook.description %></td>
    <td><%= cookbook.tips %></td>
    <td>
      <% if cookbook.materials.size != 0 %>
      <%= cookbook.materials %>
      <% else %>
      暂未指明原料
      <% end %>
    </td>
    <td>
      <% if cookbook.menus.size != 0 %>
      <%= cookbook.menus %>
      <% else %>
      还没添加至任何菜单
      <% end %>
    </td>
    <td><%= link_to 'Show', cookbook %></td>
    <td><%= link_to 'Edit', edit_cookbook_path(cookbook) %></td>
    <td><%= link_to 'Destroy', cookbook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

