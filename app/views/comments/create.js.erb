<% if @comment.invalid? %>
	<% x = "发生了 #{pluralize(@comment.errors.count, "error")} 个错误" %>
	<% x += '\n' %>
  <% @comment.errors.full_messages.each do |msg| %>
  	<% x += msg.to_s + '\n' %>
  <% end %>
  alert("<%= x %>");
<% else %>
	$( "#existing_comments_<%= @comment.food_id %>" ).append( "<%= escape_javascript(render @comment) %>" );
	$( "#comment_<%= @comment.id %>").effect( "highlight", "slow");
	$( "#new_comment_on_<%= @comment.food_id %>" )[0].reset();
	$( "#comments_count_<%= @comment.food_id %>" ).text("(<%= @comment.food.comments.count %>)");
<% end %>