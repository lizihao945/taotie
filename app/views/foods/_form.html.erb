<%= form_for(@food) do |f| %> 
<% if @food.errors.any? %>  
<div id="error_explanation">
  <h2>
    <%= pluralize(@food.errors.count, "error") %>prohibited this food from being saved:</h2>
  <ul>
    <% @food.errors.full_messages.each do |msg| %>  
    <li>
      <%= msg %></li>
    <% end %></ul>
</div>
<% end %>
  <div class='row'>
    <div class='col-md-3'>
      <div class="field">
        <h3>美食名</h3><br />
        <%= f.text_field :name, class: 'form-control' %></div>
      <div class="field">
        <h3>美食描述</h3><br />
        <%= f.text_area :description, class: 'form-control' %></div>
    </div>
    <div class="category_tags col-md-5">
      <h3>美食标签</h3>
      <% FoodCategory.all.each do |category| %>
      <label class='checkbox'>
        <input type='checkbox' name="food_categories[<%= category.id %>]">
        <%= category.name %></label>
      <% end %></div>
  </div>
  <%= submit_tag 'Create Food', class: 'btn btn-lg btn-primary', role: 'button' %>
<% end %>