<h1>Listing menus</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>User</th>
    <th>Cookbooks</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @menus.each do |menu| %>
  <tr>
    <td><%= menu.name %></td>
    <td><%= menu.description %></td>
    <td><%= menu.user %></td>
    <td>      
      <% if menu.cookbooks.size != 0 %>
      <%= menu.cookbooks %>
      <% else %>
      No cookbooks has been added.
      <% end %>
    </td>
    <td><%= link_to 'Show', menu %></td>
    <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
    <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

