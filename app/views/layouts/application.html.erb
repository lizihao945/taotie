<!DOCTYPE html>
<html>
<head>
  <title>TaoTie饕餮</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script>
    $(function(){
      $('#carousel-index').carousel();
    });
  </script>
</head>
<body>
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">TaoTie饕餮</a>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
		<!-- foods -->
      	<% if current_page?(foods_url) %>
          <li class="active">
        <% else %>
          <li>
        <% end %><a href="/foods">美食</a></li>
		<!-- cookbooks -->
      	<% if current_page?(cookbooks_url) %>
          <li class="active">
        <% else %>
          <li>
        <% end %><a href="/cookbooks">菜谱</a></li>
		<!-- index -->
      	<% if current_page?(menus_url) %>
          <li class="active">
        <% else %>
          <li>
        <% end %><a href="/menus">菜单</a></li>
      	<!-- about -->	
      	<li><a href="/about">关于</a></li>
      </ul>
      <form class="navbar-form navbar-right" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="键入美食、菜系或餐厅"></div>
        <button type="submit" class="btn btn-default">搜索</button>
      </form>
      <ul class="nav navbar-nav navbar-right">
      	<% if current_user %>
          <li class='navbar-brand hidden-sm'><%= current_user.name %></li>
          <li><a href="/logout">登出</a></li>
			    <li class="dropdown">
			      <a href="#" class="dropdown-toggle" data-toggle="dropdown">发布 <b class="caret"></b></a>
			      <ul class="dropdown-menu">
			        <li><a href="#">发布菜谱</a></li>
			        <li><a href="#">创建菜单</a></li>
  			      <li><a href="#">上传日记</a></li> 
			      </ul>
			    </li>
        <% else %>
			    <li><a href="/login">登陆</a></li>
			    <li><a href="/signup">注册</a></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div>
  <%= yield %>
</div>
<hr>
<div class='container'>
  <footer>
    <p>Copyright &copy; 2014 mllz.me</p>
  </footer>
</div>
</body>
</html>
